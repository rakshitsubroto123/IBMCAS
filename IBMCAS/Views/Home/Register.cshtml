        <!-- ======= Hero Section ======= -->
        <section id="hero" class="hero d-flex align-items-center">
            <div class="container">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div id="particles-js"></div>
                            <div class="login" >
                                <div class="container">
                                    <div class="mb-2">
                                        <h4><strong>Please Enter Patient Details...</strong></h4>
                                    </div>
                                    <div class="login-container-wrapper clearfix">

                                        <form class="form-horizontal login-form">

                                            <div class="row">
                                                <div class="col">
                                                    <div class="form-group">
                                                        First Name
                                                        <div class="col-md-10">
                                                            @Html.EditorFor(model => model.PatientFirstName, new { htmlAttributes = new { @class = "form-control" } })
                                                            @Html.ValidationMessageFor(model => model.PatientFirstName, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col">
                                                    <div class="form-group">
                                                        Last Name
                                                        <div class="col-md-10">
                                                            @Html.EditorFor(model => model.PatientLastName, new { htmlAttributes = new { @class = "form-control" } })
                                                            @Html.ValidationMessageFor(model => model.PatientLastName, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="row">
                                                <div class="col">
                                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                                    <div class="form-group">
                                                        Email
                                                        <div class="col-md-10">
                                                            @Html.EditorFor(model => model.PatientEmail, new { htmlAttributes = new { @class = "form-control" } })
                                                            @Html.ValidationMessageFor(model => model.PatientEmail, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col">
                                                    <div class="form-group">
                                                        Phone No
                                                        <div class="col-md-10">
                                                            @Html.EditorFor(model => model.PatientPhone, new { htmlAttributes = new { @class = "form-control" } })
                                                            @Html.ValidationMessageFor(model => model.PatientPhone, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="row">
                                                <div class="col">
                                                    <div class="form-group">
                                                        Date Of Birth
                                                        <div class="col-md-10">
                                                       
                                                            @Html.EditorFor(model => model.PatientDOB, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                                                            @Html.ValidationMessageFor(model => model.PatientDOB, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col">
                                                    <div class="form-group">
                                                        Gender
                                                        <div class="col-md-10">

                                                            @Html.DropDownList("PatientGender", new List<SelectListItem>
                                                                               {
                                                                                   new SelectListItem {Text = "Male", Value = "Male", Selected = true },
                                                                                   new SelectListItem {Text = "Female", Value = "Female" },
                                                                               })
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                Address
                                                <div class="col-md-10">
                                                    @Html.EditorFor(model => model.PatientAddress, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.PatientAddress, "", new { @class = "text-danger" })
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                Aadhaar Number
                                                <div class="col-md-10">
                                                    @Html.EditorFor(model => model.PatientAadhaarNumber, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.PatientAadhaarNumber, "", new { @class = "text-danger" })
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                Medical History
                                                <div class="col-md-10">
                                                    @Html.EditorFor(model => model.PatientMedicalHistory, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.PatientMedicalHistory, "", new { @class = "text-danger" })
                                                </div>
                                            </div>


                                            <div class="form-group mt-4">
                                                <div class="form-group">
                                                    <div class="col-md-offset-2 col-md-10">
                                                        <input type="submit" value="Create" class="btn btn-primary" />
                                                    </div>
                                                </div>
                                            </div>

                                        </form>
                                    </div>
                                </div>

                            </div>
                        }
                    
            </div>

        </section><!-- End Hero -->
