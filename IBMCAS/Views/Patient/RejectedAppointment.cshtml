@model IEnumerable<IBMCAS.Models.AppointmentRequest>

@{
    ViewBag.Title = "Rejected Appointments";
    Layout = "~/Views/Shared/_LayoutPatient.cshtml";

}
<br />
<h2>Rejected Appointment Requests</h2>
<br />
<table class="table">
    <tr>
        <th>
            Request Token No
        </th>
        <th>
           Physician
        </th>
        <th>
            Date Created
        </th>
        <th>
            Date Requested
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AppointmentRequestToken)
            </td>
            <td>
                @item.PhysicianID - @item.Physician.PhysicianName
            </td>
            <td>
                @item.DateCreated.Date.ToString("dd-MM-yyyy")
            </td>
            <td>
                @item.DateRequested.Date.ToString("dd-MM-yyyy")
            </td>
        </tr>
    }

</table>
