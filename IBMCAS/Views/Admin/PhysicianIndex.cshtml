@model IEnumerable<IBMCAS.Models.Physician>

@{
    ViewBag.Title = "PhysicianIndex";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Physician Management Page</h2>

<p>
    @Html.ActionLink("Add New", "AddPhysician")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PhysicianName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhysicianAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhysicianPhone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhysicianEmail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhysicianSpecialization)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhysicianSummary)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PhysicianName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhysicianAddress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhysicianPhone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhysicianEmail)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhysicianSpecialization)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhysicianSummary)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.PhysicianID }) |
            @Html.ActionLink("Details", "Details", new { id=item.PhysicianID })
        </td>
    </tr>
}

</table>
