@model IEnumerable<IBMCAS.Models.Appointment>

@{
    ViewBag.Title = "FrontDesk";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>FrontDesk</h2>

<p>
    @*@Html.ActionLink("Create New", "Create")*@
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AppointmentToken)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PatientID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhysicianID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateCreated)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateRequested)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ScheduledDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ScheduledTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.isVisited)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AppointmentToken)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PatientID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhysicianID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateCreated)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateRequested)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ScheduledDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ScheduledTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.isVisited)
        </td>
        <td>
            @if (item.isVisited == 0)
            {
                <button type="button" class="btn btn-success">
                    <a href="@Html.Action("Isvisited")" style="color: white; text-decoration: none !important">Visited</a>
                </button>
                @*@Html.ActionLink("Isvisited", "Isvisited", new { id = item.AppointmentToken })*@
            }
        </td>

</tr>
}

</table>
