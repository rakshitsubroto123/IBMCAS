@model IBMCAS.Models.AppointmentViewModel

<div class="container m-2">
    <h5>Appointmnet Details: </h5>
    <div class="row p-2">
        <div class="col">
            
            <p><strong>Appointment Token: </strong>@Html.DisplayFor(model => model.appointment.AppointmentToken)</p>
            <p><strong>Patient MR No:&emsp;&emsp;</strong>@Html.DisplayFor(model => model.appointment.Patient.PatientMRNumber)</p>
            <p><strong>Patient Name:&emsp;&emsp;</strong>@Html.DisplayFor(model => model.appointment.Patient.PatientFirstName) @Html.DisplayFor(model => model.appointment.Patient.PatientLastName)</p>
            <p><strong>Physician Name:&emsp;</strong>@Html.DisplayFor(model => model.appointment.Physician.PhysicianName)</p>
            <p><strong>Scheduled Date:&emsp;</strong>@Model.appointment.ScheduledDate.Date.ToString("dd-MM-yyyy")</p>
            <p><strong>Scheduled Time:&emsp;</strong>@Html.DisplayFor(model => model.appointment.ScheduledTime):00</p>
        </div>
        <div class="col">
            <p><strong>Advise: </strong> @Html.DisplayFor(model => model.advice.AdviceText)</p>
              
        </div>
    </div>

        <table class="table">
            <tr>
                <th>Appointment Token</th>
                <th>Patient MR No</th>
                <th>Patient Name</th>
                <th>Physician Name</th>
            </tr>
            <tr>
                <td>@Html.DisplayFor(model => model.appointment.AppointmentToken)</td>
                <td>@Html.DisplayFor(model => model.appointment.Patient.PatientMRNumber)</td>
                <td>@Html.DisplayFor(model => model.appointment.Patient.PatientFirstName) @Html.DisplayFor(model => model.appointment.Patient.PatientLastName)</td>
                <td>@Html.DisplayFor(model => model.appointment.Physician.PhysicianName)</td>
            </tr>
        </table>
        <table class="table">
            <tr>
                <th>Scheduled Date</th>
                <th>Scheduled Time</th>
            </tr>
            <tr>
                <td>@Model.appointment.ScheduledDate.Date.ToString("dd-MM-yyyy")</td>
                <td>@Html.DisplayFor(model => model.appointment.ScheduledTime)</td>
            </tr>
        </table>
    <div class="mb-1">
        <table class="table">
            <tr>
                <th>Advice</th>
            </tr>
            <tr>
                <td>@Html.DisplayFor(model => model.advice.AdviceText)</td>
            </tr>
        </table>
    </div>
    <div class="mb-1">
        <table class="table">
            <tr>
                <th colspan="3">Precriptions</th>
            </tr>
            <tr>
                <th>
                    Precription ID
                </th>
                <th>
                    Drug Id
                </th>
                <th>
                    Description
                </th>
            </tr>

            @foreach (var item in Model.prescriptions)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.PrescriptionID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DrugID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                </tr>
            }

        </table>
    </div>
</div>