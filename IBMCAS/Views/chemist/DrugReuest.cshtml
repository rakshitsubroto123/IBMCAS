@model IEnumerable<IBMCAS.Models.DrugRequest>

@{
    ViewBag.Title = "DrugReuest";
    Layout = "~/Views/Shared/_Layoutchemist.cshtml";
}

<h2>Drug Reqests</h2>

<table class="table">
    <tr>
        <th>
             Physician
        </th>
        <th>
            Description
        </th>
        <th>
            Requested Date
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.Physician.PhysicianID - @item.Physician.PhysicianName
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RequestDescription)
        </td>
        <td>
            @item.RequestedDate.Date.ToString("dd-MM-yyyy")
        </td>
    </tr>
}

</table>
